<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="15dp"
    android:background="#fff">

    <TextView
        android:id="@+id/discussion_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/TextAppearance.Holo.Large"
        android:text="@string/discussion_title" />

    <View style="@style/Divider"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"></View>

    <com.nn.studio.episode8.ui.views.SmartViewPager
        android:id="@+id/discussion_posts"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></com.nn.studio.episode8.ui.views.SmartViewPager>

</LinearLayout>